<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/LL_of_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_message_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="receiver message here"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/message_profile_image"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/receiver_message_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:text=" Receiver Message Time "
            android:textStyle="italic"
            android:textSize="10dp"


            />

    </LinearLayout>

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"/>
<LinearLayout
    android:layout_marginTop="5dp"
    android:id="@+id/LL_of_sender_message_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentEnd="true"
    android:background="@drawable/sender_messages_layout"

    >

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:text=" Sender Message "
        android:textSize="14sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/sender_message_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444040"
        android:text=" Sender Message Time "
        android:layout_alignParentEnd="true"
        android:textStyle="italic"
        android:textSize="10dp"


        />

</LinearLayout>


</RelativeLayout>